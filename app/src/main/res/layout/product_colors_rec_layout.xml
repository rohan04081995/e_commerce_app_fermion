<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <View
        android:id="@+id/product_colors_rec_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle_shape_bg_border_16"
        android:backgroundTint="@color/bluish_color"
        app:layout_constraintEnd_toEndOf="@id/product_colors_rec_name_tv"
        app:layout_constraintStart_toStartOf="@id/product_colors_rec_name_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_colors_rec_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bluish_bg_border_16"
        android:padding="4dp"
        android:text="color"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_colors_rec_view" />

</androidx.constraintlayout.widget.ConstraintLayout>